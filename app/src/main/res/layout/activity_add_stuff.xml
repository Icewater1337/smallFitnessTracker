<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddStuff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a food with name and calories"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodName"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/nameLbl"
        android:layout_toEndOf="@+id/nameLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/nameLbl"
        android:layout_alignTop="@+id/foodName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:id="@+id/caloriesLbl"
        android:layout_alignTop="@+id/foodName"
        android:layout_toRightOf="@+id/foodName"
        android:layout_toEndOf="@+id/foodName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodCalories"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/caloriesLbl"
        android:layout_toEndOf="@+id/caloriesLbl" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add food"
        android:id="@+id/addFood"
        android:layout_below="@+id/foodName"
        android:layout_alignParentLeft="true"
        android:onClick="addFood"/>
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a training by calories burned"
        android:id="@+id/textView7"
        android:layout_below="@+id/addFood"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training Name"
        android:id="@+id/trainingNameLbl"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trainingName"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/trainingNameLbl"
        android:layout_toEndOf="@+id/trainingNameLbl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories burned"
        android:id="@+id/caloriesBurnedLbl"
        android:layout_below="@+id/textView7"
        android:layout_toRightOf="@+id/trainingName"
        android:layout_toEndOf="@+id/trainingName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/caloriesBurned"
        android:layout_alignTop="@+id/caloriesBurnedLbl"
        android:layout_toRightOf="@+id/caloriesBurnedLbl"
        android:layout_toEndOf="@+id/caloriesBurnedLbl" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Training"
        android:id="@+id/button"
        android:layout_below="@+id/trainingName"
        android:onClick="addTraining"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/done"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="goBack"
        android:layout_alignParentStart="true" />
    android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
